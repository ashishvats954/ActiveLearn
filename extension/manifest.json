{
  "manifest_version": 3,
  "name": "Prism",
  "version": "1.0",
  "description": "An intelligent study assistant for video lectures.",

  "icons": {
    "128": "icon.png"
  },

  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://[YOUR_RENDER_URL_HERE]/"  
  ],
  "background": {
    "service_worker": "background.js"
  }
}